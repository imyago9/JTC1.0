/* Styles will be categorized. */


/* Buttons */

QPushButton#add_friend_button {
    padding: 4px 6px;
    color: white;
    font-weight: bold;
    border: 2px solid #e7f1d6;
    border-radius: 5px;
    background-color: #222222;
}
QPushButton:hover#add_friend_button {
    background-color: #486328;
}

